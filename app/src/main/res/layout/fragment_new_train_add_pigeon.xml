<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl1"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <include
            android:layout_width="match_parent"
            android:layout_height="1dp"
            layout="@layout/include_line_view_layout"/>

        <TextView
            android:id="@+id/tvChooseYet"
            android:layout_marginLeft="37dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:text="@string/text_choose_yet"
            android:textSize="@dimen/medium_text_size"
            android:layout_width="40dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvAllChoose"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size"
            android:text="@string/text_all_choose"
            android:layout_centerVertical="true"
            android:layout_marginLeft="108dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/tvAddAtOnce"
            android:background="@color/state_enabled_false"
            android:textColor="@color/color_text_enabled_false"
            android:text="@string/text_add_at_once"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/large_text_size"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <include
        android:layout_above="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/xrecyclerview_layout"/>

</RelativeLayout>