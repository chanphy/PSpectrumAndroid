<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvFootNumber"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/black"
        android:layout_gravity="center"
        tools:text="123123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.cpigeon.book.widget.LineInputView
        android:id="@+id/lvTime"
        app:lineInputView_isShowLineDivisions="visible"
        app:lineInputView_LeftString="@string/text_fly_back_time"
        app:lineInputView_Hint="@string/text_pleas_choose"
        app:lineInputView_IsCanEdit="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.cpigeon.book.widget.LineInputView
        android:id="@+id/lvDis"
        app:lineInputView_isShowLineDivisions="visible"
        app:lineInputView_LeftString="空距(KM)"
        app:lineInputView_Hint="@string/text_pleas_choose"
        app:lineInputView_IsCanEdit="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.cpigeon.book.widget.LineInputView
        android:id="@+id/lvSpeed"
        app:lineInputView_isShowLineDivisions="visible"
        app:lineInputView_LeftString="分速(M/min)"
        app:lineInputView_Hint="@string/text_pleas_choose"
        app:lineInputView_IsCanEdit="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/red_light"
        android:text="温馨提示：仅支持当天归巢记录。"
        android:textSize="@dimen/small_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            style="@style/bottom_style_cancel"
            android:text="@string/btn_cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/tvOk"
            android:textSize="15sp"
            android:text="@string/text_sure"
            style="@style/bottom_style"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp" />

    </LinearLayout>

</LinearLayout>