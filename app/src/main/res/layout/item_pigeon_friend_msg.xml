<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="@dimen/spacing_left_reight">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="这是标题标题图"
            android:textColor="@color/color_010101"
            android:textSize="@dimen/medium_text_size" />


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_circle"
            android:layout_width="8dp"
            android:background="@drawable/bg_circle"
            android:layout_height="8dp" />

    </LinearLayout>

    <include layout="@layout/include_line_view_layout" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
       />

    <include layout="@layout/include_line_view_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/color_text_hint"
            android:textSize="@dimen/small_text_size_2"
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018-11-12 23:00:33" />


        <TextView
            android:textSize="@dimen/small_text_size_2"
            android:textColor="@color/color_text_hint"
            android:id="@+id/tv_send_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="某某发送" />

    </LinearLayout>

</LinearLayout>
