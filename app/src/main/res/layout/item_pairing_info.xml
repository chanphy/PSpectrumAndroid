<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_left_reight"
    android:paddingRight="@dimen/spacing_left_reight">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_view_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <!--足环号-->
        <TextView
            android:id="@+id/tv_foot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018-22-2323232"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/medium_text_size" />

        <!--血统-->
        <TextView
            android:id="@+id/tv_lineage"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="神奇的小鸟"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/medium_text_size" />


        <!--窝次-->
        <TextView
            android:id="@+id/tv_nest_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="0窝"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/medium_text_size" />


    </LinearLayout>

    <include layout="@layout/include_line_view_layout" />


</LinearLayout>
