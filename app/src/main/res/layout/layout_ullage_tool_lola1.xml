<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ullage_tool_tv_h1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ullage_tool_img_wh"
            android:layout_height="@dimen/ullage_tool_img_wh"
            android:layout_margin="5dp"
            android:background="@mipmap/ullage_tool_sfd" />

        <TextView
            android:textColor="@color/color_262626"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="司放地经度 " />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ullage_tool_tv_h2"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ullage_tool_item_ptb"
        android:paddingLeft="@dimen/ullage_tool_img_wh"
        android:paddingTop="@dimen/ullage_tool_item_ptb">


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ullage_tool_kuang"
            android:orientation="horizontal"
            android:padding="@dimen/ullage_tool_lola_item_p">

            <EditText
                android:inputType="number"
                android:maxLength="3"
                android:id="@+id/et_ullage1_lo1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="度"
                android:textSize="@dimen/ullage_tool_tv_size" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ullage_tool_lola_cen_img_mlr"
            android:layout_marginRight="@dimen/ullage_tool_lola_cen_img_mlr"
            android:layout_weight="1"
            android:background="@drawable/ullage_tool_kuang"
            android:orientation="horizontal"
            android:padding="@dimen/ullage_tool_lola_item_p">

            <EditText
                android:inputType="number"
                android:maxLength="2"
                android:id="@+id/et_ullage1_lo2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textSize="@dimen/ullage_tool_tv_size" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ullage_tool_kuang"
            android:orientation="horizontal"
            android:padding="@dimen/ullage_tool_lola_item_p">

            <EditText
                android:inputType="number|numberDecimal"
                android:maxLength="5"
                android:id="@+id/et_ullage1_lo3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒"
                android:textSize="@dimen/ullage_tool_tv_size" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ullage_tool_tv_h1"
        android:orientation="horizontal">


        <ImageView
            android:layout_margin="5dp"
            android:layout_width="@dimen/ullage_tool_img_wh"
            android:layout_height="@dimen/ullage_tool_img_wh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="司放地纬度"
            android:textColor="@color/color_262626" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ullage_tool_tv_h2"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ullage_tool_item_ptb"
        android:paddingLeft="@dimen/ullage_tool_img_wh"
        android:paddingTop="@dimen/ullage_tool_item_ptb">


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ullage_tool_kuang"
            android:orientation="horizontal"
            android:padding="@dimen/ullage_tool_lola_item_p">

            <EditText
                android:inputType="number"
                android:maxLength="2"
                android:id="@+id/et_ullage1_la1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="度"
                android:textSize="@dimen/ullage_tool_tv_size" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ullage_tool_lola_cen_img_mlr"
            android:layout_marginRight="@dimen/ullage_tool_lola_cen_img_mlr"
            android:layout_weight="1"
            android:background="@drawable/ullage_tool_kuang"
            android:orientation="horizontal"
            android:padding="@dimen/ullage_tool_lola_item_p">

            <EditText
                android:inputType="number"
                android:maxLength="2"
                android:id="@+id/et_ullage1_la2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textSize="@dimen/ullage_tool_tv_size" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ullage_tool_kuang"
            android:orientation="horizontal"
            android:padding="@dimen/ullage_tool_lola_item_p">

            <EditText
                android:inputType="number|numberDecimal"
                android:maxLength="5"
                android:id="@+id/et_ullage1_la3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒"
                android:textSize="@dimen/ullage_tool_tv_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ullage_tool_tv_h1"
        android:orientation="horizontal">


        <ImageView
            android:layout_margin="5dp"
            android:layout_width="@dimen/ullage_tool_img_wh"
            android:layout_height="@dimen/ullage_tool_img_wh" />

        <TextView
            android:textColor="@color/color_262626"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="司放时间" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_xzsj1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ullage_tool_tv_h3"
        android:clickable="true">


        <ImageView
            android:layout_margin="5dp"
            android:layout_width="@dimen/ullage_tool_img_wh"
            android:layout_height="@dimen/ullage_tool_img_wh" />


        <TextView
            android:id="@+id/tv_time1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请选择时间"
            android:textColor="@color/color_999999" />

        <ImageView
            android:layout_width="@dimen/ullage_tool_img_wh2"
            android:layout_height="@dimen/ullage_tool_img_wh2"
            android:rotation="90"
            android:src="@mipmap/ic_info_r" />
    </LinearLayout>

</LinearLayout>