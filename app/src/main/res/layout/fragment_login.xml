<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgHead"
        android:layout_gravity="center"
        android:layout_marginTop="34dp"
        android:src="@mipmap/ic_logo"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/white"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <EditText
        android:id="@+id/edUserName"
        android:textColor="@color/white"
        android:hint="@string/text_input_phone_or_username"
        android:textColorHint="@color/white"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_input_bg"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="40dp" />

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_input_bg"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        
        <ImageButton
            android:layout_marginRight="6dp"
            android:background="@null"
            android:src="@mipmap/hide2x"
            android:id="@+id/imgLookPwd"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        
        <EditText
            android:layout_toLeftOf="@+id/imgLookPwd"
            android:textColorHint="@color/white"
            android:background="@null"
            android:hint="@string/text_login_password_hint"
            android:textColor="@color/white"
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="40dp" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/tvLogin"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:text="@string/text_login"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/btn_base_rect_selector"
        android:layout_marginTop="40dp"
        android:layout_height="40dp" />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_register"
            android:textSize="14dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="@string/text_register_at_once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_alignParentRight="true"
            android:textSize="14dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="@string/text_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>