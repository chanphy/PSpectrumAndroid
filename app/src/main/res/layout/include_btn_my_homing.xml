<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_all_pigeon"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_view_height"
    android:layout_marginLeft="@dimen/spacing_left_reight"
    android:layout_marginTop="2dp"
    android:layout_marginRight="@dimen/spacing_left_reight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/img_w_h"
            android:layout_height="@dimen/img_w_h"
            android:src="@mipmap/homing_pigeon_all" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="@string/str_name_homing_pigeon"
            android:textColor="@color/color_4c4c4c"
            android:textSize="@dimen/small_text_size_2" />

    </LinearLayout>

</android.support.v7.widget.CardView>