<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="推送消息"
            android:textColor="@color/color_4c4c4c"
            android:textSize="@dimen/small_text_size_2" />


        <!--   app:kswBackDrawable="@color/gray"
            app:kswThumbDrawable="@color/colorPrimary"-->
        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_push_info"
            style="@style/Setting_Item_CheckBox"
            android:layout_width="40dp"
            android:layout_height="20dp"
            app:kswThumbColor="@color/color_white" />

    </LinearLayout>

    <include layout="@layout/include_line_view_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="声音提示"
            android:textColor="@color/color_4c4c4c"
            android:textSize="@dimen/small_text_size_2" />


        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_voice_hint"
            style="@style/Setting_Item_CheckBox"
            android:layout_width="40dp"
            android:layout_height="20dp"
            app:kswThumbColor="@color/color_white" />
    </LinearLayout>

    <include layout="@layout/include_line_view_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="震动提示"
            android:textColor="@color/color_4c4c4c"
            android:textSize="@dimen/small_text_size_2" />


        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_vibration_hint"
            style="@style/Setting_Item_CheckBox"
            android:layout_width="40dp"
            android:layout_height="20dp"
            app:kswThumbColor="@color/color_white" />
    </LinearLayout>

    <include layout="@layout/include_line_view_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="免打扰"
            android:textColor="@color/color_4c4c4c"
            android:textSize="@dimen/small_text_size_2" />


        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_dont_disturb"
            style="@style/Setting_Item_CheckBox"
            android:layout_width="40dp"
            android:layout_height="20dp"
            app:kswThumbColor="@color/color_white" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_dont_disturb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_line_view_layout" />

        <LinearLayout
            android:id="@+id/ll_time_start"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="起始时间"
                android:textColor="@color/color_4c4c4c"
                android:textSize="@dimen/small_text_size_2" />


            <TextView
                android:id="@+id/tv_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/general_text_color"
                android:textSize="@dimen/medium_text_size" />
        </LinearLayout>

        <include layout="@layout/include_line_view_layout" />

        <LinearLayout
            android:id="@+id/ll_time_end"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="结束时间"
                android:textColor="@color/color_4c4c4c"
                android:textSize="@dimen/small_text_size_2" />


            <TextView
                android:id="@+id/tv_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/general_text_color"
                android:textSize="@dimen/medium_text_size" />
        </LinearLayout>

        <include layout="@layout/include_line_view_layout" />

    </LinearLayout>


</LinearLayout>
