<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape >

            <solid android:color="#0073E6" >
            </solid>

            <corners android:radius="2.5dp" >
            </corners>

            <stroke
                android:width="1px"
                android:color="#0073E6" >
            </stroke>
        </shape>
    </item>
    <item  android:state_enabled="false">
        <shape >

            <solid android:color="@color/state_enabled_false" >
            </solid>

            <corners android:radius="2.5dp" >
            </corners>

            <stroke
                android:width="1px"
                android:color="#85C2FF" >
            </stroke>
        </shape>
    </item>
    <item  >
        <shape >

            <solid android:color="@color/colorPrimary" >
            </solid>

            <corners android:radius="2.5dp" >
            </corners>

            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" >
            </stroke>
        </shape>
    </item>
</selector>