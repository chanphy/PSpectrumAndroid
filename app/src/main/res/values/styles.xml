<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/color_background</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <!--<item name="buttonStyle">@style/Button</item>-->
        <item name="editTextStyle">@style/EditText</item>
        <item name="navigationIcon">@drawable/svg_back</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextAppearance">@style/ToolbarMenuTextStyle</item>
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/anim_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_right_out</item>
    </style>

    <style name="ToolbarMenuTextStyle">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="AppTheme.Load" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.Launch" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme"></style>

    <!-- toolbar style function for toolbar title style  Here can only change the color-->
    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/Toolbar.Title</item>
    </style>

    <style name="Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/btn_color</item>
        <item name="backgroundTint">@color/btn_color</item>
        <item name="android:textAppearance">@style/textAppearanceButton</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="textAppearanceButton" parent="Base.TextAppearance.AppCompat.Button">
        <!--<item name="android:textColor">@color/color_button_selector</item>-->
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHintInverse">@color/color_999999</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textAppearance">@style/textAppearanceEditText</item>
    </style>

    <style name="textAppearanceEditText" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textColorHintInverse">@color/color_999999</item>

    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/color_white_transparent_70</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab.Gridy</item>
    </style>

    <style name="TextAppearance.Design.Tab.Gridy" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="style_add">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
    </style>

    <style name="badge_style">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">-20dp</item>
    </style>


    <style name="style_register_icon">
        <item name="android:padding">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>


    </style>


    <style name="jpushDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="bottom_out_in_anim">
        <item name="android:windowEnterAnimation">@anim/bottom_out</item>
        <item name="android:windowExitAnimation">@anim/bottom_in</item>
    </style>

    <style name="anim_fade_in_out">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <style name="bottom_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_btn_rect</item>
    </style>

    <style name="bottom_style2" parent="bottom_style">
        <item name="android:textColor">@color/color_4c4c4c</item>
        <item name="android:background">@drawable/shape_radius_4_stroke</item>
    </style>

    <style name="bottom_style3" parent="bottom_style">
        <item name="android:background">@drawable/selector_btn_rect3</item>
    </style>

    <style name="GridPasswordView" />

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AnimBottomDialog" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_out</item>
        <item name="android:windowExitAnimation">@anim/bottom_in</item>

    </style>

    <style name="Setting_Item_CheckBox">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>

    </style>

    <declare-styleable name="FocusImageView">
        <attr name="focus_focusing_id" format="integer" />
        <attr name="focus_success_id" format="integer" />
        <attr name="focus_fail_id" format="integer" />
    </declare-styleable>

    <declare-styleable name="StarRatingView">
        <!--星星点亮-->
        <attr name="stat_on" format="reference"/>
        <!--星星关闭-->
        <attr name="stat_off" format="reference"/>
        <!--半颗星星-->
        <attr name="stat_half" format="reference"/>
        <!--是否可以点击滑动评分-->
        <attr name="ratable" format="boolean"/>
        <!--星星之间间距-->
        <attr name="star_padding" format="dimension"/>
    </declare-styleable>


</resources>
